{
  "name": "d4g2020-front",
  "version": "1.0.0",
  "description": "The proposition of the CGreenIdea team to the D4G 2020 challenge",
  "scripts": {
    "clean": "rimraf dist/*",
    "start": "run-p start:**",
    "start:html": "onchange -i 'src/html/**/*' -- cp -pr src/html/* dist/",
    "start:rollup": "npm run build:rollup -- -w",
    "start:styles": "onchange -i 'src/css/**/*' -- npm run build:styles",
    "prebuild": "npm run clean",
    "build": "run-p build:**",
    "build:html": "html-minifier --input-dir src/html --output-dir dist --file-ext html --remove-comments --collapse-whitespace --minify-js true --minify-css true",
    "build:rollup": "rollup -c",
    "build:styles": "node-sass --precision 6 src/css/index.scss dist/ifn.css"
  },
  "author": "CGreenIdea",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@rollup/plugin-babel": "5.2.1",
    "html-minifier": "4.0.0",
    "node-sass": "5.0.0",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.33.1",
    "rollup-plugin-terser": "7.0.2"
  }
}
